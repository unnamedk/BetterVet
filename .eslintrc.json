{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {      
        "indent": "off",
        "camelcase": "off",
        "semi": 1,
        "quotes": [1, "single"],
        "semi-style": ["error", "last"],
        "no-console": 1,
        "sort-imports": 0,
        "@typescript-eslint/indent": ["error", 2],
        "no-useless-constructor": "off"
    }
}
